<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.report.ReportsFragment"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_item2" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:paddingBottom="300dp">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D9D9D9" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/themeTypeRequest"
                                    android:layout_weight="0.8"
                                    android:layout_marginLeft="24dp"
                                    style="@style/header"

                                    />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/amount"
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="23dp"
                                    style="@style/header"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/percent"
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="23dp"
                                    android:layout_marginEnd="9dp"
                                    style="@style/header"
                                    android:gravity="center" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bug"
                                    android:layout_weight="0.8"
                                    android:layout_marginLeft="24dp"
                                    style="@style/header"
                                    android:drawableStart="@drawable/ic_ellipse_10"
                                    android:drawablePadding="4dp"
                                    android:gravity="center_vertical" />

                                <TextView
                                    android:id="@+id/amountBug"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    tools:text="240"
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="23dp"
                                    style="@style/header"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/percentBug"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="23dp"
                                    android:layout_marginEnd="9dp"
                                    style="@style/header"
                                    tools:text="5%"
                                    android:gravity="center" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/changeRequest"
                                    android:layout_weight="0.8"
                                    android:layout_marginLeft="24dp"
                                    style="@style/header"
                                    android:drawableStart="@drawable/ic_ellipse_10"
                                    android:drawableTint="#4560FF"
                                    android:drawablePadding="4dp"
                                    android:gravity="center_vertical" />

                                <TextView
                                    android:id="@+id/changeAmount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    tools:text="240"
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="23dp"
                                    style="@style/header"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/percentChange"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="23dp"
                                    android:layout_marginEnd="9dp"
                                    style="@style/header"
                                    tools:text="5%"
                                    android:gravity="center" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/questionSystem"
                                    android:layout_weight="0.8"
                                    android:layout_marginLeft="24dp"
                                    style="@style/header"
                                    android:drawableTint="#FFC869"
                                    android:drawableStart="@drawable/ic_ellipse_10"
                                    android:drawablePadding="4dp"
                                    android:gravity="center_vertical" />

                                <TextView
                                    android:id="@+id/questionAmount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    tools:text="240"
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="23dp"
                                    style="@style/header"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/percentQuestion"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="23dp"
                                    android:layout_marginEnd="9dp"
                                    style="@style/header"
                                    tools:text="5%"
                                    android:gravity="center" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/newFunction"
                                    android:layout_weight="0.8"
                                    android:layout_marginLeft="24dp"
                                    style="@style/header"
                                    android:drawableTint="#F98F57"
                                    android:drawableStart="@drawable/ic_ellipse_10"
                                    android:drawablePadding="4dp"
                                    android:gravity="center_vertical" />

                                <TextView
                                    android:id="@+id/newFunAmount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    tools:text="240"
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="23dp"
                                    style="@style/header"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/percentNewFun"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="23dp"
                                    android:layout_marginEnd="9dp"
                                    style="@style/header"
                                    tools:text="5%"
                                    android:gravity="center" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/parameterization"
                                    android:layout_weight="0.8"
                                    android:layout_marginLeft="24dp"
                                    style="@style/header"
                                    android:drawableTint="#73C6FF"
                                    android:drawableStart="@drawable/ic_ellipse_10"
                                    android:drawablePadding="4dp"
                                    android:gravity="center_vertical" />

                                <TextView
                                    android:id="@+id/parameterizationAmount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    tools:text="240"
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="23dp"
                                    style="@style/header"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/percentParameterization"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="23dp"
                                    android:layout_marginEnd="9dp"
                                    style="@style/header"
                                    tools:text="5%"
                                    android:gravity="center" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>