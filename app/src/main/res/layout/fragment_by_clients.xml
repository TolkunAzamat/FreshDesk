                                    style="@style/byModuls"
                                    android:layout_marginStart="8dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#E7E7E7"
                            android:layout_marginTop="4dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center_vertical"
                                    android:layout_height="match_parent"
                                    android:text="Залоги"
                                    style="@style/byModuls"
                                    android:layout_marginStart="8dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:layout_marginTop="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="ПРБО"
                                    android:layout_marginStart="8dp"
                                    android:gravity="center_vertical"
                                    style="@style/byModuls"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#E7E7E7"
                            android:layout_marginTop="4dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Базовые справочники"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="8dp"
                                    style="@style/byModuls"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:layout_marginTop="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Э.кошелек"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="8dp"
                                    style="@style/byModuls"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#E7E7E7"
                            android:layout_marginTop="4dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="ЭЦП"
                                    android:layout_marginStart="8dp"
                                    style="@style/byModuls"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:layout_marginTop="4dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Казначейские операции"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="8dp"
                                    style="@style/byModuls"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#E7E7E7"
                            android:layout_marginTop="4dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Integration Service"
                                    android:layout_marginStart="8dp"
                                    android:gravity="center_vertical"
                                    style="@style/byModuls"
                                    android:textStyle="bold" />
                            </LinearLayout>
